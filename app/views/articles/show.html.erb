<h2><%= @article.title %></h2>
<div class="article_content">
  <%= @article.content %>
</div>

<small>
  <p>
    Created at <%= @article.created_at.strftime("%H:%M %Z") %> on <%= @article.created_at.strftime("%d/%m/%Y") %>
  </p>
</small>

<% if user_signed_in? %>
  <%= link_to 'Edit', edit_article_path(@article) %>
<% end %>
<%= link_to 'Back', articles_path %>