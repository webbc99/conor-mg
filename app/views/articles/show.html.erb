<div class="jumbotron jumbotron-small">
  <div class="container">
    <div class="row">
      <div class="col-xl-6">
        <h1 class="display-3 text-light"><%= @article.title %></h1>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <% if @article.upload_file_name %>
    <div class="row">
      <div class="col-md-8">
        <div class="content"><%= @article.content %></div>
      </div>
      <div class="col-md-4">
        <%= image_tag @article.upload.url(:medium), :id => "article_image_show_view" %>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-md-12">
        <div class="content"><%= @article.content %></div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <hr>
      <small>
        <p>
          Created at <%= @article.created_at.strftime("%H:%M %Z") %> on <%= @article.created_at.strftime("%d/%m/%Y") %>
        </p>
      </small>
      <% if user_signed_in? %>
        <%= link_to 'Edit', edit_article_path(@article), :class => "text-dark" %> | 
      <% end %>
      <%= link_to 'Back', articles_path, :class => "text-dark" %>
    </div>
  </div>
</div>