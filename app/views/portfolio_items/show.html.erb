<div class="jumbotron jumbotron-small">
  <div class="container">
    <div class="row">
      <% if @portfolio_item.title.length > 70 %>
        <div class="col-xl-7">
          <h1 class="display-5 text-light"><%= @portfolio_item.title %></h1>
        </div>
      <% elsif @portfolio_item.title.length > 35 %>
        <div class="col-xl-7">
          <h1 class="display-4 text-light"><%= @portfolio_item.title %></h1>
        </div>
      <% else %>
        <div class="col-xl-7">
          <h1 class="display-3 text-light"><%= @portfolio_item.title %></h1>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="content portfolio_content"><%= @portfolio_item.content.html_safe %></div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <hr>
      <small>
        <p>
          Created at <%= @portfolio_item.created_at.strftime("%H:%M %Z") %> on <%= @portfolio_item.created_at.strftime("%d/%m/%Y") %>
        </p>
      </small>
      <% if user_signed_in? %>
        <%= link_to 'Edit', edit_portfolio_item_path(@portfolio_item), :class => "text-dark" %> | 
      <% end %>
      <%= link_to 'Back', portfolio_path, :class => "text-dark" %>
    </div>
  </div>
</div>