<div class="jumbotron jumbotron-small">
  <div class="container">
    <h1 class="display-3 text-light">My Portfolio</h1>
    <h5 class="text-light">A warts-and-all account of the projects I've worked on, with links to work completed in order to invite visitors to review my work.</h5>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="card-deck">
      <% @portfolio_items.each do |portfolio_item| %>
        <div class="col-md-12 col-lg-4">
          <div class="card portfolio-card mb-5">
            <%= image_tag portfolio_item.upload.url(:medium), :class => 'card-img-top portfolio_index_image' %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to portfolio_item.title, portfolio_item_path(portfolio_item), :class => 'text-dark' %></h5>
              <% unless portfolio_item.summary.nil? %>
                <p class="card-text"><%= truncate(portfolio_item.summary, length: 350) %></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
